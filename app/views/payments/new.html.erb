<div class="container">
  <div class="row py-4">
    <%# raise %>
    <div class="container">
      <div class="image">
        <%= image_tag "https://i.ibb.co/xJKkKCf/WO-1.png"%>
      </div>
    </div>

    <div class="col">
      <h1>Checkout summary</h1>


      <div class="container my-5 p-3 border">
        <h5>Purchase of a <strong><%= @order.trainning.category.name %></strong> training for <strong><%= humanized_money_with_symbol @order.amount/100 %></strong></h5>
      </div>

      <div class="container">

        <button id="pay" class="btn btn-primary">Pay</button>
          <script src="https://js.stripe.com/v3/"></script>
          <script>
            const paymentButton = document.getElementById('pay');
            paymentButton.addEventListener('click', () => {
              const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
              stripe.redirectToCheckout({
                sessionId: '<%= @order.checkout_session_id %>'
              });
            });
          </script>
          <i class="fas fa-shopping-cart fa-2x"></i>
        </div>

    </div>
  </div>
</div>

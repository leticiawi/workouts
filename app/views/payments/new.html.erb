<div class="container">
  <div class="row py-4">
    <%# raise %>
    <div class="col-md-3"><%= cl_image_tag(@order.trainning.user.profile.photo.key, height:300, width:355, crop: :thumb, gravity: :face) %></div>


    <div class="col">
      <h1>Checkout summary</h1>


      <div class="container my-5 p-3 border">
        <h5>Purchase of a <strong><%= @order.trainning.category.name %></strong> training for <strong><%= humanized_money_with_symbol @order.amount/100 %></strong></h5>
      </div>

      <div class="container">

        <button id="pay" class="btn btn-primary btn-block">Pay</button>
          <script src="https://js.stripe.com/v3/"></script>
          <script>
            const paymentButton = document.getElementById('pay');
            paymentButton.addEventListener('click', () => {
              const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
              stripe.redirectToCheckout({
                sessionId: '<%= @order.checkout_session_id %>'
              });
            });
          </script>
          <i class="fas fa-shopping-cart fa-2x">.......</i>
          <i class="fas fa-shopping-cart fa-lg">..........</i>
          <i class="fas fa-shopping-cart fa-sm">.........................</i>

        </div>

    </div>
  </div>
</div>

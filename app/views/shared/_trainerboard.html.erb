
<div class="container" id="select">




  <div id="text-big">
    <div class="container text-center border-bottom">
      <h3>Hello, <%= current_user.name %> !</h3>
      <h5>--Ready for challenges?--</h5>
    </div>
  </div>
   <div class="container adjust-height">
    <div class="container">
      <div class="user-infos"></div>
      <%# if current_user.photo.attached? %>
      <div class="image">
        <%#= image_tag current_user.photo.key%>

      </div>
      <%# else %>
      <div class="image">
        <%= image_tag "https://i.ibb.co/xJKkKCf/WO-1.png"%>
      </div>
       <%# end %>
      <div class="profile-usertitle">
				<div class="profile-usertitle-name">
					<%= current_user.name.capitalize! %>
				</div>
      </div>
        <ul class="list-group list-group-flush">
          <%= link_to "All trainnings", trainnings_path, class: "list-item"%>
          <%= link_to "My trainnings", trainer_index_path, class: "list-item"%>
          <%= link_to "Add trainning", new_trainning_path, class: "list-item"%>
          <%= link_to "Profile", new_profile_path, class: "list-item"%>
        </ul>
        <%#= link_to "Register as personal trainer!", new_user_session_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>



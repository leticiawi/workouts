      <%# else %>
      <div class="image">
        <%= image_tag "https://i.ibb.co/xJKkKCf/WO-1.png"%>
      </div>
       <%# end %>

    <div class="container">
      <div class="d-flex justify-content-center">
          <div class="row">
            <div class="col-6">
              <%= link_to "All trainnings", trainnings_path, class: "btn-profile"%>
            </div>
            <div class="col-6">
              <%= link_to "My trainnings", trainer_index_path, class: "btn-profile"%>
            </div>
            <div class="col-6">
              <%= link_to "Add trainning", new_trainning_path, class: "btn-profile"%>
            </div>            
            <% if current_user.profile%>
              <div class="col-6">
                <%= link_to "Profile", profile_path(profile), class: "btn-profile"%>
              </div>
            <% else %>
              <div class="col-6">
                <%= link_to "Create Profile", new_profile_path, class: "btn-profile"%>
              </div>
            <% end %>
          </div>
        </div>
          <%#= link_to "Register as personal trainer!", new_user_session_path, class: "btn btn-primary" %>


<div class="container" id="select">
  <div id="text-big">
    <div class="container text-center border-bottom">
      <h3>Hello, <%= current_user.name %> !</h3>
      <h5>--Ready for challenges?--</h5>
    </div>
  </div>
  <div class="container adjust-height">
    <div class="container">
      <%# if current_user.photo.attached? %>
      <div class="image">
        <%#= image_tag current_user.photo.key%>


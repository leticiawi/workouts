<div class="container justify-content-center" id="select">
  <h3>Rate your experience</h3>

  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |form| %>
        <%= form.input :rating, collection: (1..5).to_a %>
        <%= form.input :content %>
        <%= form.submit class: 'btn btn-info btn-block' %>
      <% end %>
    </div>
  </div>
</div>

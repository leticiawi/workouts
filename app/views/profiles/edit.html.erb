<div class="container" id="select">
  <div class="container text-center border-bottom">
    <h3>Update your Profile:</h3>
  </div>

  <div class="container">

    <%= simple_form_for @profile do |f| %>
      <%= f.input :user_id, as: :hidden %>
        <%= f.input :speciality %></li>
        <%= f.input :bio %></li>
        <%= f.input :age %></li>
        <%= f.input :certifications %></li>
        <%= f.input :achievments %></li>
        <div class="container">
          <%= f.input :photo, as: :file %></li>
          <%= f.submit 'Save Changes', class: 'btn btn-info btn-block' %>
      </div>
    <% end %>

  </div>

</div>

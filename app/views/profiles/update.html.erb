<h2>Register your information as a Personal Trainer</h2>

<div class="container">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :trainer, label: "I am a trainner", default: true %>
      <%= f.input :register_number,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "register_number" }%>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :category,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "category" }%>
      <%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "duration" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Register" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

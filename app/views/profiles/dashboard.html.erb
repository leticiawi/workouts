
<% if current_user.trainer == false %>
<div class="container" id="select">
      <h1 id="username">Hi <%= current_user.name.capitalize! %>!</h1><h4>where do you want to train today?</h4>
        <form class="form-inline">
          <%= simple_form_for :search, url: trainnings_path do |f|%>
          <%= f.input :"", class: "input-form" %>
          <%= f.submit :search, class: "submit"%>
          <% end %>
        </form>
        
     <div class="container adjust-height">
      <div class="container">
        <div class="user-infos"></div>
        <div class="image">
          <%= image_tag "https://images.unsplash.com/photo-1554244933-d876deb6b2ff?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80"%>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-6">
                <%= link_to :Trainnings, trainnings_path, class: "list-item"%>
            </div>
            <div class="col-6">
                <li class="list-item">Edit profile</li>
            </div>
            <div class="col-6">
                <li class="list-item">Add Review</li>
            </div>
          </div>
        </div>
          <%#= link_to "Register as personal trainer!", new_user_session_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<%= link_to "index", trainnings_path %>
<%else %>
<%= render 'shared/trainerboard' %>
<% end  %>



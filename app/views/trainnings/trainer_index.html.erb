
<div class="d-flex justify-content-center border-bottom">
<h3><%= current_user.name %>'s trainnings:</h3>
</div>


  <div class="row">
    <% @trainnings.each do |trainning| %>
      <div class="col-12">
        <div class="card" style="width: 15rem;">
          <div class="d-flex justify-content-center p-1 border-bottom ">
            <img class="avatar-large" alt="avatar-large" src="https://avatars3.githubusercontent.com/u/67508360?s=460&v=4" />
          </div>
           <div class="d-flex text-center p-1">
            <div class="card-body">
              <p class="card-title"><%= trainning.user.name %></p>
              <p class="card-title"><%= trainning.category.name %></p>
              <p class="card-title"><%= trainning.duration %></p>
              <p class="card-title">" <%= trainning.description %> "</p>
              <%= link_to "view deatils", trainer_show_path(trainning), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

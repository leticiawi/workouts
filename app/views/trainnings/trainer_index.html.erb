<div class="container" id="select">

<div class="d-flex justify-content-center border-bottom">
<h3><%= current_user.name %>'s trainnings:</h3>
</div>
      <div class="row">
      <% @trainnings.each do |trainning| %>
        <div class="col-6">
          <div class="card-trainning">
      <div class="d-flex justify-content-center p-1 border-bottom ">

        <% if trainning.user.profile && trainning.user.profile.photo.attached?  %>
          <%= cl_image_tag trainning.user.profile.photo.key, class: "avatar avata-large" %>
        <% else %>
          <div class="image">
            <%= image_tag "https://i.ibb.co/w7XyQQ5/WOxxx.png"%>
          </div>
        <% end %>
      </div>
        <div class="card-body">
          <!-- rating p: 22-29 -->
          <p class="card-title">
            <% rating = @trainning.user.average_rating %>
            <% rating.times do %>
              <span class="star_rating"><%= "\u2605" %></span>
            <% end %>
            <% (5 - rating).times do %>
              <span class="empty_star_rating">â˜†</span>
            <% end %>
          </p>
          <p class="card-title" id="title-size"><%= trainning.user.name %></p>
          <p class="card-title" id="title-size"><%= trainning.category.name %></p>
          <p class="card-title" id="title-size"><%= trainning.duration %></p>
            <!--<p class="card-title">" <%#= trainning.description %> "</p>-->
        </div>
            <div>
              <%= link_to "view details", trainer_show_path(trainning), class: "btn details  " %>
            </div>
      </div>

          <%#= render "trainnings/cards", trainning: trainning %>

        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container" id="select">
<div class="container text-center border-bottom">
  <h3><%= current_user.name %>'s training's details:</h3>
</div>
  <div class="trainning-details">
    <div class="d-flex justify-content-center p-1 border-bottom ">
      <% if @trainning.user.profile && @trainning.user.profile.photo.attached?  %>
      <%= cl_image_tag @trainning.user.profile.photo.key, class: "avatar avatar-large" %>
      <% else %>
      <div class="image">
        <%= image_tag "https://i.ibb.co/xJKkKCf/WO-1.png", class: "avatar avatar-large"%>
      </div>
      <% end %>
    </div>
      <div class="card-body">
        <p class="card-title"><strong>By: </strong><%= @trainning.user.name %></p>
        <p class="card-title">
          <% if @profile.user.reviews.present? %>
            <% rating = @profile.user.average_rating.to_i %>
            <% rating.times do %>
            <span class="star_rating"><%= "\u2605" %></span>
          <% end %>
            <% (5 - rating).times do %>
            <span class="empty_star_rating">â˜†</span>
          <% end %>
        <% else %>
          <span>Trainer has no reviews yet.</span>
        <% end %>
      </p>
      <p class="card-title"> <strong>Category:</strong> <%= @trainning.category.name %></p>
      <p class="card-title"> <strong>Booked:</strong><%= @orders_count %> times</p>
      <p class="card-title"><%= @trainning.duration %></p>
      <p class="card-title"><strong>Amount: </strong><%= @trainning.price_cents/100 %> $</p>
      <p class="card-title">" <%= @trainning.description %> "</p>
      <%= link_to "Delete", trainning_path(@trainning), class: "btn btn-orange btn-sm", method: :delete, remote: true %>
      <%= link_to "View All", trainer_index_path, class: "btn btn-dark-grey btn-sm" %>
      <%= link_to "Edit", edit_trainning_path(@trainning), class: "btn btn-dark-grey btn-sm" %>
    </div>
  </div>
</div>

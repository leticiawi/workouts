<div class="container" id="select">
  <div class="container text-center border-bottom">
    <h3>Trainning's details:</h3>
  </div>
</div>

      <div class="trainning-details">
        <div class="d-flex justify-content-center p-1 border-bottom ">
          <img class="avatar-large" alt="avatar-large" src="https://avatars3.githubusercontent.com/u/67508360?s=460&v=4" id="avatar"/>
        </div>
         <div class="d-flex text-center">
          <div class="card-body">
            <p class="card-title"><i class="fas fa-user-check"></i><%=" "%><%= @trainning.user.name.capitalize! %></p>
            <p class="card-title"><%= image_tag ("gym.png")%><%=" "%><%= @trainning.category.name.capitalize! %></p>
            <p class="card-title"><i class="far fa-clock"></i></i><%=" "%><%= @trainning.duration %></p>
            <p class="card-title">" <%= @trainning.description.capitalize! %> "</p>
            <div class="container">

              <% if @trainning.user.profile %>
                <%= link_to "Trainers Profile ", profile_path(@trainning.user.profile), class: "btn btn-success btn-sm btn-block" %>
              <% end %>
              <%= link_to "View All", trainnings_path(@trainning), class: "btn btn-primary btn-sm" %>
              <%= link_to "Book Now", checkout_path(trainning_id: @trainning.id), class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



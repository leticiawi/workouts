

<div class="container adjust-height">

  <div class="container" id="select">
    <h3 id="login-big">Log in</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
                   
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }%>
                    
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%#= link_to "Log in", trainnings_path, class: "btn btn-flat" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <%= f.button :submit, "Log in", class: "log-in-btn" %>
      </div>
    <% end %>


    <h4>Dont have an account yet?</h4>

    <%= render "devise/shared/links" %>
  </div>
</div>
